<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleTextAppearance">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="ScreenTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/screen_title_margin_bottom</item>
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
        <item name="contentInsetStartWithNavigation">@dimen/search_toolbar_text_nav_icon_padding
        </item>
    </style>

    <style name="MainMenuTitle" parent="ScreenTitle">
        <item name="titleTextColor">?attr/colorOnSecondary</item>
    </style>

    <style name="ButtonMainMenu" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/horizontal_padding</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">?attr/colorTertiary</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnTertiary</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">?attr/colorOnTertiary</item>
    </style>

    <style name="MenuItemSettingsMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/horizontal_padding</item>
        <item name="android:paddingVertical">24dp</item>
    </style>

    <style name="TextSettingsMenu">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
    </style>

    <style name="DrawableSettingsMenu">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:foregroundGravity">center_vertical</item>
        <item name="tint">?attr/colorOnPrimaryFixed</item>
    </style>

    <style name="SwitchItem" parent="MenuItemSettingsMenu">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
    </style>

    <style name="SearchEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/search_edittext_shape</item>
        <item name="android:drawableStart">@drawable/icon_search</item>
        <item name="android:drawablePadding">@dimen/search_drawable_horizontal_padding</item>
        <item name="android:drawableTint">?attr/colorOnPrimaryFixedVariant</item>
        <item name="android:paddingHorizontal">@dimen/search_drawable_horizontal_padding</item>
        <item name="android:paddingVertical">@dimen/search_text_vertical_padding</item>
        <item name="android:textColorHint">?attr/colorOnPrimaryFixedVariant</item>
        <item name="android:textCursorDrawable">@drawable/cursor_search</item>
        <item name="android:textColor">?attr/colorOnTertiary</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SearchResultTrackName">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
    </style>

    <style name="SearchResultArtistAndTrackTime">
        <item name="android:textColor">?attr/colorOnPrimaryFixed</item>
        <item name="android:textSize">@dimen/text_size_small_3</item>
    </style>

    <style name="SearchResultAlbumCover">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingVertical">@dimen/search_result_album_cover_padding</item>
        <item name="android:paddingRight">@dimen/search_result_album_cover_padding</item>
    </style>

    <style name="PlaceholderText">
        <item name="android:layout_marginHorizontal">
            @dimen/search_placeholder_text_margin_horizontal
        </item>
        <item name="android:layout_marginTop">@dimen/search_placeholder_text_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/search_placeholder_text_margin_bottom</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="PlaceholderButton">
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="cornerRadius">@dimen/search_menu_button_corner_radius</item>
    </style>

    <style name="PlayerDescriptionItemsLeftColumn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/text_size_small_2</item>
        <item name="android:paddingStart">@dimen/player_description_horizontal_padding</item>
    </style>

    <style name="PlayerDescriptionItemsRightColumn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_small_2</item>
        <item name="android:paddingEnd">@dimen/player_description_horizontal_padding</item>
    </style>

    <style name="ViewPagerTabText">
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

</resources>