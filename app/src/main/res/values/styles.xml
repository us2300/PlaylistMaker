<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ScreenTitle">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TitleMainMenu">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:paddingHorizontal">38dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">@dimen/horizontal_padding</item>
    </style>

    <style name="ButtonMainMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/horizontal_padding</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
    </style>

    <style name="MenuItemSettingsMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/horizontal_padding</item>
        <item name="android:paddingVertical">24dp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_settings_menu</item>
        <item name="drawableTint">?attr/colorOnPrimaryFixedVariant</item>
    </style>

</resources>