<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Прозрачный статус бар -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Не дает содержимому экрана уходить под статус бар -->
        <item name="android:windowTranslucentStatus">false</item>

        <!-- Цвета фона -->
        <item name="colorPrimary">@color/white</item>

        <!-- Цвета текста на фоне -->
        <item name="colorOnPrimary">@color/yp_black</item>
        <item name="colorOnPrimaryFixed">@color/grey</item>

        <!-- Цвет фона поля ввода текста -->
        <item name="colorOnPrimaryContainer">@color/light_grey</item>

        <!-- Цвет текста поля ввода -->
        <item name="colorOnPrimaryFixedVariant">@color/grey</item>

        <!--  Вариант цвета фона -->
        <item name="colorSecondary">@color/blue</item>

        <!-- Цвет текста на варианте фона -->
        <item name="colorOnSecondary">@color/white</item>

        <!-- Цвет кнопок главного меню -->
        <item name="colorTertiary">@color/white</item>

        <!-- Цвет текста на фоне кнопок главного меню -->
        <item name="colorOnTertiary">@color/yp_black</item>

    </style>

    <style name="Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker" />

</resources>